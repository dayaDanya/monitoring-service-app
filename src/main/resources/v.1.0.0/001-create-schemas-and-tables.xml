<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="001-create-schema-and-sequence" author="dayaDanya">

        <sql>CREATE SCHEMA entities</sql>
        <createSequence schemaName="entities"
                        sequenceName="entities_sequence" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="001-create-tables" author="dayaDanya">
        <createTable schemaName="entities" tableName="person">

            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_person"/>
            </column>
            <column name="id" defaultValueSequenceNext="entities_sequence"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable schemaName="entities" tableName="counter_type">

            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"
                             primaryKeyName="pk_counter_type"/>
            </column>
            <column name="id" defaultValueSequenceNext="entities_sequence"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable schemaName="entities" tableName="counter">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_counter"/>
            </column>
            <column name="id" defaultValueSequenceNext="entities_sequence"/>
            <column name="person_id" type="BIGINT">
                <constraints foreignKeyName="fk_author_id" references="entities.person(id)"
                nullable="false" deleteCascade="true"/>
            </column>
            <column name="counter_type_id" type="BIGINT">
                <constraints foreignKeyName="fk_counter_id" references="entities.person(id)"
                 nullable="false" deleteCascade="true"/>
            </column>
            <column name="counter_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable schemaName="entities" tableName="measurement">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_counter"/>
            </column>
            <column name="id" defaultValueSequenceNext="entities_sequence"/>
            <column name="counter_id" type="BIGINT">
                <constraints foreignKeyName="fk_counter_id" references="entities.person(id)"
                            nullable="false" deleteCascade="true"/>
            </column>
            <column name="amount" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="submission_date" type="timestamp without time zone">
                <constraints nullable="false"/>
            </column>
            <column name="counter_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
   



</databaseChangeLog>